{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Laptop Run ECLiPSe",
            "type": "shell",
            "command": "C:\\Users\\echan\\Desktop\\TkEclipse.lnk",
            "problemMatcher": [],
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Compile Parser",
            "type": "shell",
            "command": "${workspaceFolder}/bin/compile_parser.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "default"
            }
        },
        {
            "label": "Call Parser",
            "type": "shell",
            "command": "${workspaceFolder}/bin/call_parser.sh",
            "args": [
                "${fileDirname}",
                "${fileBasename}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Preprocesses the current C file and then runs sikraken_parser on it."
        },
        {
            "label": "Run TestCov",
            "type": "shell",
            "command": "testcov",
            "args": [
                "--no-isolation",
                "--test-suite",
                "${fileDirname}/suite-${fileBasenameNoExtension}.zip",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Run TestCov on generated test inputs Zip file"
        },
        {
            "label": "Run Regression Tests",
            "type": "shell",
            "command": "/usr/bin/time",
            "args": [
                "-v"
                "${workspaceFolder}/bin/run_regression.sh"
                "/home/chris/Sikraken/regression_tests"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "runOptions": {
                "runOn": "default"
            }
        }
    ]
}